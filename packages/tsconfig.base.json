{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@ned-finance/wallet/*": ["./wallet/src/*"],
      "@ned-finance/wallet-core/*": ["./wallet-core/src/*"],
      "@ned-finance/wallet-solana/*": ["./wallet-solana/src/*"]
    }
  },
  "include": ["./*/src", "./*/types"],
  "exclude": ["node_modules", "dist"]
}
